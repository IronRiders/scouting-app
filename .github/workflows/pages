name: Build for Pages

on:
  push:
    branches:
      - main

jobs:
  deploy:
    runs-on: ubuntu-latest

    steps:
      - name: Check Out Repository
        uses: actions/checkout@v2

      - name: Set up Node.js
        uses: actions/setup-node@v2
        with:
          node-version: 20.7.0

      - name: Install Dependencies
        run: npm install

      - name: Run Dev Run Predeploy
        run: npm run dev run predeploy

      - name: Commit Changes
        run: |
          git config user.name "Pages Builder"
          git config user.email "actions@ironriders.org"
          git add .
          git commit -m "Pages Build"
          git push
